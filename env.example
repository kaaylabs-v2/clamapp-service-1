# Server Configuration
PORT=3000
NODE_ENV=development

# SQL Server Database Configuration (Matching your SSMS connection)
DB_HOST=(local)\\SQLEXPRESS
DB_NAME=CALMAPP

# Windows Authentication (Integrated Security=True from your connection string)
DB_TRUSTED_CONNECTION=true

# Alternative: SQL Authentication (if you prefer)
# DB_TRUSTED_CONNECTION=false
# DB_USER=your_sql_username
# DB_PASSWORD=your_sql_password

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security
JWT_SECRET=your_jwt_secret_here_change_this_in_production
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info 